{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@/lib/*": ["./fysk/lib/*"],
      "@/components/hooks/useFyskAnimation": ["./fysk/components/react/hooks/useFyskAnimation.ts"],
      "@/components/fysk-provider": ["./fysk/components/react/provider/fysk-provider.tsx"],
      "@/components/fysk/*": ["./fysk/components/react/radix/*"],
      "@fysk/ui": ["./fysk/index.ts"]
    },
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["**/*.ts", "**/*.tsx", "apps/web/tailwind.config.js", "apps/web/src/app/(docs)/docs/components/react/popover.mdx", "apps/web/src/app/(docs)/docs/components/react/button-group.mdx"],
  "exclude": ["node_modules", "dist"]
}

